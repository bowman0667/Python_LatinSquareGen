import machine
from machine import Pin 
import utime

led_pin = machine.Pin(25, machine.Pin.OUT)

pir_sensor = Pin(0, Pin.IN)


while True:
    
    if pir_sensor.value() == 1:
        led_pin.value(1)
        print(pir_sensor.value())
        utime.sleep(1)
    if pir_sensor.value() == 0:
        led_pin.value(0)
        print(pir_sensor.value())
        utime.sleep(1)
